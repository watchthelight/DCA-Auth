# Environment Configuration
NODE_ENV=development

# ============================================
# Application Configuration
# ============================================
APP_NAME=DCA-Auth
APP_VERSION=1.0.0

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SERVER_BASE_URL=http://localhost:3000
API_URL=http://localhost:3000/api
DASHBOARD_URL=http://localhost:3001
SERVER_TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_DIRECTORY=./logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
COLLECT_DEFAULT_METRICS=true

# Shutdown Configuration
SHUTDOWN_GRACEFUL_TIMEOUT=10000
SHUTDOWN_FORCE_TIMEOUT=30000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/dca_auth?schema=public"
DATABASE_URL_TEST="postgresql://postgres:postgres@localhost:5432/dca_auth_test?schema=public"
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=20000
DATABASE_SSL=false

# Prisma Configuration
PRISMA_LOG_LEVEL=error,warn
PRISMA_ERROR_FORMAT=pretty
PRISMA_ENGINE_TYPE=library

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=dca:dev:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_ENABLE_OFFLINE_QUEUE=true
REDIS_CONNECT_TIMEOUT=10000

# Cache Configuration
CACHE_DEFAULT_TTL=3600
SESSION_TTL=86400

# ============================================
# Discord Configuration
# ============================================
# Bot Configuration
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_CLIENT_ID=your-client-id-here
DISCORD_GUILD_ID=your-dev-guild-id
DISCORD_PREFIX=!

# OAuth Configuration
DISCORD_CLIENT_SECRET=your-client-secret-here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
DISCORD_SCOPES=identify,guilds,email

# Gateway Configuration
DISCORD_INTENTS=GUILDS,GUILD_MEMBERS,GUILD_MESSAGES

# ============================================
# Authentication Configuration
# ============================================
# JWT Configuration
JWT_ACCESS_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=dca-auth
JWT_AUDIENCE=dca-auth-users

# Session Configuration
SESSION_SECRET=change-this-to-a-secure-session-secret-min-32-chars
SESSION_NAME=dca.sid
SESSION_MAX_AGE=86400000
SESSION_HTTP_ONLY=true
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
BCRYPT_ROUNDS=12

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
REQUIRE_EMAIL_VERIFICATION=true
ALLOW_MULTIPLE_SESSIONS=true
MAX_SESSIONS_PER_USER=5

# ============================================
# API Configuration
# ============================================
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Pagination
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100

# ============================================
# Feature Flags
# ============================================
FEATURE_NEW_DASHBOARD=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_BETA=false
FEATURE_DARK_MODE=true
FEATURE_WEBHOOKS=true
FEATURE_SLASH_COMMANDS=true
FEATURE_AUDIT_LOGGING=true

# ============================================
# Limits Configuration
# ============================================
LIMIT_LICENSES_PER_USER=10
LIMIT_GUILDS_PER_LICENSE=1
LIMIT_USERS_PER_LICENSE=1
LIMIT_API_CALLS_PER_HOUR=1000
LIMIT_WEBHOOKS_PER_USER=5
LIMIT_SESSIONS_PER_USER=5
