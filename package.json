{
  "name": "dca-auth",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Discord-Connected Authorization System for automated license key management",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,bot -c blue,green \"npm run dev -w @dca-auth/api\" \"npm run dev -w @dca-auth/bot\"",
    "dev:api": "npm run dev -w @dca-auth/api",
    "dev:bot": "npm run dev -w @dca-auth/bot",
    "dev:frontend": "npm run dev -w @dca-auth/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w @dca-auth/api",
    "build:bot": "npm run build -w @dca-auth/bot",
    "build:frontend": "npm run build -w @dca-auth/frontend",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
