{
  "dashboard": {
    "id": null,
    "uid": "dca-auth-security",
    "title": "DCA-Auth Security Monitoring",
    "tags": ["dca-auth", "security", "audit"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Failed Login Attempts (1h)",
        "targets": [
          {
            "expr": "sum(increase(auth_login_failures_total[1h]))",
            "legendFormat": "Failed Logins"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Rate Limit Violations (1h)",
        "targets": [
          {
            "expr": "sum(increase(rate_limit_exceeded_total[1h]))",
            "legendFormat": "Rate Limits"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 20 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Invalid License Keys (24h)",
        "targets": [
          {
            "expr": "sum(increase(invalid_license_key_attempts_total[24h]))",
            "legendFormat": "Invalid Keys"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 200 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "Critical Security Events",
        "targets": [
          {
            "expr": "sum(increase(audit_log_total{severity=\"CRITICAL\"}[24h]))",
            "legendFormat": "Critical Events"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 10 },
        "type": "graph",
        "title": "Authentication Attempts",
        "targets": [
          {
            "expr": "sum(rate(auth_login_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "yaxes": [
          {
            "label": "Attempts/sec",
            "format": "short",
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "1m",
          "handler": 1,
          "name": "High Failed Login Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 10 },
        "type": "heatmap",
        "title": "Suspicious Activity by IP",
        "targets": [
          {
            "expr": "sum(increase(suspicious_activity_total[1h])) by (ip_address)",
            "format": "heatmap"
          }
        ],
        "dataFormat": "timeseries",
        "yAxis": {
          "format": "short"
        },
        "color": {
          "mode": "spectrum",
          "scheme": "interpolateReds"
        }
      },
      {
        "id": 7,
        "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
        "type": "table",
        "title": "Recent Critical Audit Events",
        "targets": [
          {
            "expr": "audit_log_entries{severity=\"CRITICAL\"}",
            "format": "table",
            "instant": true
          }
        ],
        "styles": [
          {
            "pattern": "Time",
            "type": "date",
            "dateFormat": "YYYY-MM-DD HH:mm:ss"
          },
          {
            "pattern": "action",
            "alias": "Action"
          },
          {
            "pattern": "user_id",
            "alias": "User"
          },
          {
            "pattern": "ip_address",
            "alias": "IP Address"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 },
        "type": "graph",
        "title": "2FA Usage",
        "targets": [
          {
            "expr": "sum(two_factor_enabled_users)",
            "legendFormat": "2FA Enabled"
          },
          {
            "expr": "sum(two_factor_verifications_total)",
            "legendFormat": "2FA Verifications"
          }
        ],
        "yaxes": [
          {
            "label": "Count",
            "format": "short",
            "show": true
          }
        ]
      },
      {
        "id": 9,
        "gridPos": { "x": 0, "y": 22, "w": 8, "h": 8 },
        "type": "piechart",
        "title": "Audit Events by Severity",
        "targets": [
          {
            "expr": "sum(audit_log_total) by (severity)",
            "legendFormat": "{{severity}}"
          }
        ],
        "pieType": "pie",
        "legendDisplayMode": "table",
        "legendPlacement": "right"
      },
      {
        "id": 10,
        "gridPos": { "x": 8, "y": 22, "w": 8, "h": 8 },
        "type": "graph",
        "title": "Webhook Delivery Success Rate",
        "targets": [
          {
            "expr": "(sum(webhook_success_total) / (sum(webhook_success_total) + sum(webhook_failure_total))) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "yaxes": [
          {
            "label": "Success %",
            "format": "percent",
            "show": true
          }
        ]
      },
      {
        "id": 11,
        "gridPos": { "x": 16, "y": 22, "w": 8, "h": 8 },
        "type": "table",
        "title": "Top IPs by Failed Attempts",
        "targets": [
          {
            "expr": "topk(10, sum(increase(auth_login_failures_total[24h])) by (ip_address))",
            "format": "table",
            "instant": true
          }
        ],
        "styles": [
          {
            "pattern": "ip_address",
            "alias": "IP Address"
          },
          {
            "pattern": "Value",
            "alias": "Failed Attempts"
          }
        ]
      }
    ]
  }
}