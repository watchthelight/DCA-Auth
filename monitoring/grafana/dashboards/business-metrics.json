{
  "dashboard": {
    "id": null,
    "uid": "dca-auth-business",
    "title": "DCA-Auth Business Metrics",
    "tags": ["dca-auth", "business", "kpi"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
        "type": "stat",
        "title": "Total Revenue (30d)",
        "targets": [
          {
            "expr": "sum(license_revenue_total)",
            "legendFormat": "Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 1000 },
                { "color": "green", "value": 5000 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
        "type": "stat",
        "title": "New Users (7d)",
        "targets": [
          {
            "expr": "increase(users_registered_total[7d])",
            "legendFormat": "New Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
        "type": "stat",
        "title": "License Activation Rate",
        "targets": [
          {
            "expr": "(sum(license_status{status=\"ACTIVE\"}) / sum(license_status)) * 100",
            "legendFormat": "Activation Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "green", "value": 75 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "x": 0, "y": 6, "w": 12, "h": 10 },
        "type": "graph",
        "title": "Daily License Sales",
        "targets": [
          {
            "expr": "sum(increase(licenses_created_total[1d])) by (type)",
            "legendFormat": "{{type}}"
          }
        ],
        "bars": true,
        "lines": false,
        "stack": true,
        "yaxes": [
          {
            "label": "Licenses Sold",
            "format": "short",
            "show": true
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "x": 12, "y": 6, "w": 12, "h": 10 },
        "type": "piechart",
        "title": "License Distribution by Type",
        "targets": [
          {
            "expr": "sum(license_status{status=\"ACTIVE\"}) by (type)",
            "legendFormat": "{{type}}"
          }
        ],
        "pieType": "donut",
        "legendDisplayMode": "table",
        "legendPlacement": "right"
      },
      {
        "id": 6,
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 10 },
        "type": "graph",
        "title": "User Growth",
        "targets": [
          {
            "expr": "users_total",
            "legendFormat": "Total Users"
          },
          {
            "expr": "sum(increase(users_registered_total[1d]))",
            "legendFormat": "New Users (Daily)"
          }
        ],
        "yaxes": [
          {
            "label": "Users",
            "format": "short",
            "show": true
          }
        ]
      },
      {
        "id": 7,
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 10 },
        "type": "table",
        "title": "Top Products by Revenue",
        "targets": [
          {
            "expr": "topk(10, sum(license_revenue_total) by (product_name))",
            "format": "table",
            "instant": true
          }
        ],
        "styles": [
          {
            "pattern": "Value",
            "type": "number",
            "unit": "currencyUSD",
            "decimals": 2,
            "alias": "Revenue"
          },
          {
            "pattern": "product_name",
            "alias": "Product"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": { "x": 0, "y": 26, "w": 8, "h": 8 },
        "type": "stat",
        "title": "Churn Rate (30d)",
        "targets": [
          {
            "expr": "(sum(license_status{status=\"EXPIRED\"}) / sum(license_status)) * 100",
            "legendFormat": "Churn Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": { "x": 8, "y": 26, "w": 8, "h": 8 },
        "type": "stat",
        "title": "Average Revenue Per User",
        "targets": [
          {
            "expr": "sum(license_revenue_total) / count(distinct(user_id))",
            "legendFormat": "ARPU"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 20 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": { "x": 16, "y": 26, "w": 8, "h": 8 },
        "type": "stat",
        "title": "License Renewal Rate",
        "targets": [
          {
            "expr": "(sum(licenses_renewed_total) / sum(licenses_expired_total)) * 100",
            "legendFormat": "Renewal Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 40 },
                { "color": "green", "value": 70 }
              ]
            }
          }
        }
      }
    ]
  }
}